<?xml version="1.0" encoding="utf-8"?>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditServiceProviderProfile"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:fontFamily="@font/dekko"
                android:text="Edit My Information : "
                android:textColor="@color/colorPrimary"
                android:textSize="36sp"
                android:textStyle="bold" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">
            <TextView
                android:text="Company Name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"
                />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">
            <TextView
                android:text="Full Name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"
                />
            </TableRow>

            <LinearLayout
                android:id="@+id/comp_type_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/company_type"
                    android:layout_width="127dp"
                    android:paddingTop="5dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="20dp"

                    android:textColor="@color/progressBarColor"
                    android:text="@string/companytype"
                    />

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="248dp"
                    android:layout_height="50dp"


                    android:fontFamily="@font/roboto_regular"

                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/mobile"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="1dp"
                        android:layout_weight="1"
                        android:text="@string/mobile" />

                    <RadioButton
                        android:id="@+id/stationary"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/stationary" />

                    <RadioButton
                        android:id="@+id/both"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/both" />


                </RadioGroup>
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">
            <TextView
                android:text="Email"

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"
                />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">
            <TextView
                android:text="PhoneNumber"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"
              />

            <TextView
                android:id="@+id/PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"
                />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"
                android:text="Gender" />

            <TextView
                android:id="@+id/Gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"
                android:text="Address" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">


            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"
                android:text="Password" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp"/>
            </TableRow>


            <Button
                android:id="@+id/Modify"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="#fff"
                android:background="@color/stronggreen"
                android:text="@string/save_modification"
                android:textAllCaps="false"
             />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">








            </LinearLayout>



        </LinearLayout>



    </ScrollView>
