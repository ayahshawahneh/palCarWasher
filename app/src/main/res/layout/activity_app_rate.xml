<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border8"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".AppRate">




    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/dekko"
        android:text="@string/how_would_you_rate_our_app_experience"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="29sp"
        android:layout_marginTop="140dp"/>


    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:numStars="5"
        android:stepSize=".5"
        android:theme="@style/RatingBar"/>




    <Button
        android:id="@+id/ratingbutton"
        android:layout_width="170dp"
        android:background="@drawable/btn_custom2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="50dp"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/ratingtext"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:layout_gravity="center"
        android:text="@string/your_rating_will_appear_here"
        android:textAlignment="center"
        android:textColor="@color/darkYellow"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>