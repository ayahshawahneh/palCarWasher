<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCustomerProfile">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/dekko"
            android:text="@string/edit_my_information"

            android:textColor="@color/colorPrimary"
            android:textSize="30sp"

            android:textStyle="bold" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:text="@string/full_name"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:text="@string/e_mail"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"

                />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:text="@string/password"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"

                />


            <EditText
                android:id="@+id/passwordd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:text="@string/phone_number"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"

                />


            <TextView
                android:id="@+id/phoneNub"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"

                android:textSize="15sp" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:text="@string/gender"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"

                />


            <TextView
                android:id="@+id/gend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"

                android:textSize="15sp" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"
                android:text="@string/birthday_date"
                android:textColor="@color/progressBarColor"
                android:textSize="20sp"

                />


            <EditText
                android:id="@+id/birthdayDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:background="@drawable/et_custom"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="15sp" />


        </TableRow>

        <Button
            android:id="@+id/Modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_custom"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/save_modification"
            android:textColor="@android:color/white" />
    </LinearLayout>



    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="4dp">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/allerta"
            android:text="@string/click_back_to_return"
            android:textStyle="bold" />


    </TableRow>

</RelativeLayout>