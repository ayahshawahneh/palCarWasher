<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompanyDetailsActivity"
    android:background="@drawable/border4"
    android:layout_margin="10dp">





        <ImageView
            android:id="@+id/company_logo2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/company_name22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bevan"
        android:text="@string/company_name"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        android:layout_marginTop="10dp"
        style="?android:attr/ratingBarStyleIndicator"
        android:theme="@style/RatingBar"
android:layout_gravity="center"

        />




<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_owner"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:textColor="@color/design_default_color_secondary_variant"
            />

        <TextView
            android:id="@+id/company_owner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Ayah shawahne"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_weight="1"/>


    </TableRow>






    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_gravity="center">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone_number"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_phone_number"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="059111111111"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_weight="1"/>


    </TableRow>




    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_gravity="center">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/address"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_address"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="05912ddddddddddddddddd345678"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_weight="1"/>


    </TableRow>



</TableLayout>














    </LinearLayout>











