<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompanyDetailsActivity"
    android:layout_margin="10dp"
    android:background="@drawable/border4">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >









    <ImageView
            android:id="@+id/company_logo2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/company_name22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bevan"
        android:text="@string/company_name"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="30sp"
        android:textStyle="bold" />
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize=".5"
        android:layout_marginTop="10dp"
        style="?android:attr/ratingBarStyleIndicator"
        android:theme="@style/RatingBar"
android:layout_gravity="center"

        />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Of Orders "
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_weight="0"
android:layout_gravity="center"
            android:textColor="@color/design_default_color_secondary_variant"
            />

        <TextView
            android:id="@+id/number_of_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_weight="0"/>


    </TableRow>


<TableLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_owner"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:textColor="@color/design_default_color_secondary_variant"
            />

        <TextView
            android:id="@+id/company_owner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Ayah shawahne"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_weight="1"/>


    </TableRow>






    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_gravity="center">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/phone_number"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_phone_number"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="059111111111"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_weight="1"/>


    </TableRow>




    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="30dp"
        android:layout_gravity="center">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/address"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/company_address"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="05912ddddddddddddddddd345678"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_weight="1"/>


    </TableRow>



</TableLayout>



    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="?android:attr/listDivider" />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/working_hours"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="19sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saterday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/thu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_gravity="center">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday:"
                android:textSize="17sp"
                android:textStyle="bold"

                android:layout_weight="0"/>
            <TextView
                android:id="@+id/fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 pm-7:00 am,9:00 am - 11:00 am"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>


        </TableRow>

    </TableLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="?android:attr/listDivider" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/comments_and_feedback"
        android:textColor="@color/design_default_color_secondary_variant"
        android:textSize="19sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/commentandfeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_comments_yet"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1px"
        android:visibility="visible">




    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>





</ScrollView>





